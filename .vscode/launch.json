  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current file as script",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Current file as module",
      "type": "python",
      "request": "launch",
      "module": "python.${fileBasenameNoExtension}.${fileBasenameNoExtension}",
      // "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
